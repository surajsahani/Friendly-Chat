<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Profile" />
    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_Profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/toolView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_account_circle_black_36dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_name"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/purple_500"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_Profile">


        <TextView
            android:id="@+id/tv_name"
            android:text="Suraj Sahani"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="@dimen/padding_10"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/cv_scan"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/purple_500"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/cv_name">

    <ImageView
        android:id="@+id/iv_scanLogo"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:padding="@dimen/padding_10"
        android:layout_height="wrap_content"
        android:src="@drawable/qr_code"/>

    <TextView
        android:id="@+id/tv_scan"
        android:text="QR Code"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:padding="@dimen/padding_10"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_forward"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/padding_10"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward"/>
</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logout"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/purple_500"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_scan">


        <TextView
            android:id="@+id/et_logout"
            android:text="Logout"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="@dimen/padding_10"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>